<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Timeluxe - Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        border: 1px solid #dee2e6;
      }
      .row {
        margin: 0;
      }
      .login-panel {
        padding: 3rem;
      }
      .brand {
        font-size: 2.2rem;
        font-weight: bold;
        font-family: "Times New Roman", Times, serif;
        margin-bottom: 2rem;
      }
      .form-control {
        border-radius: 4px;
        padding: 0.75rem;
        border: 1px solid #ced4da;
        margin-bottom: 1rem;
      }
      .form-control:focus {
        box-shadow: none;
        border-color: #ff4d6d;
      }
      .btn-signin {
        background-color: #ff4d6d;
        border: none;
        padding: 0.75rem;
        border-radius: 4px;
        font-weight: 500;
        margin-top: 1rem;
      }
      .btn-signin:hover {
        background-color: #ff3a5e;
      }
      .watch-image-container {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .watch-image {
        max-width: 100%;
        max-height: 100%;
      }
      .password-toggle {
        position: absolute;
        right: 10px;
        top: 12px;
        cursor: pointer;
        color: #6c757d;
      }
      .input-container {
        position: relative;
      }
    </style>
  </head>
  <body>
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="container">
        <div class="row">
          <!-- Left Panel - Form -->
          <div class="col-md-6 login-panel">
            <h1 class="brand">Timeluxe</h1>

            <form id="loginForm" method="post" action="/admin/login">
              <div class="mb-3">
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="Email"
                />
              </div>

              <div class="mb-3 input-container">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  placeholder="Password"
                />
                <span
                  class="password-toggle"
                  onclick="togglePassword('password')"
                >
                  <i class="fa fa-eye-slash"></i>
                </span>
              </div>

              <button type="submit" class="btn btn-signin text-white w-100">
                Sign in
              </button>
            </form>
          </div>

          <!-- Right Panel - Watch Image -->
          <div class="col-md-6 watch-image-container">
            <img
              src="/img/shopping (11).webp"
              alt="Casio Watch"
              class="watch-image"
            />
          </div>
        </div>
      </div>
    </div>
    <script>
      function togglePassword(id) {
        const passwordInput = document.getElementById(id);
        const icon = passwordInput.nextElementSibling.querySelector("i");

        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          icon.classList.remove("fa-eye-slash");
          icon.classList.add("fa-eye");
        } else {
          passwordInput.type = "password";
          icon.classList.remove("fa-eye");
          icon.classList.add("fa-eye-slash");
        }
      }
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("loginForm");
        form.addEventListener("submit", function (e) {
          const emailInput = document.getElementById("email");
          const passwordInput = document.getElementById("password");

          if (!emailInput.value || !passwordInput.value) {
            e.preventDefault();
          }
        });
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
