
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> Men Fashion - Admin Dashboard </title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="/css/admin.css">

    
    
</head>
<body>
    <!-- Screen Overlay -->
    <div class="screen-overlay" id="screenOverlay"></div>

    <!-- Sidebar -->
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin" class="brand-wrap">
                <!-- <i class="material-icons" style="font-size: 32px; margin-right: 10px;">checkroom</i> -->
                <span class="text">TimeLuxe</span>
            </a>
            <div>
                <button class="btn-aside-minimize" id="btnMinimize">
                    <i class="material-icons">menu_open</i>
                </button>
            </div>
        </div>
        <nav>
            <ul class="menu-aside">
                <li class="menu-item">
                    <a class="menu-link "href="/admin">
                        <i class="icon material-icons">home</i>
                        <span class="text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link " href="/admin/users">
                        <i class="icon material-icons">person</i>
                        <span class="text">Customers</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/category">
                        <i class="icon material-icons">category</i>
                        <span class="text">Category</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/brand">
                        <i class="icon material-icons">stars</i>
                        <span class="text">Brands</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link " href="/admin/product">
                        <i class="icon material-icons">shopping_bag</i>
                        <span class="text">Product</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link " href="/admin/offer">
                        <i class="icon material-icons">add_box</i>
                        <span class="text">Offer</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link " href="/admin/coupon">
                        <i class="icon material-icons">local_offer</i>
                        <span class="text">Coupon</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link" href="/admin/banner">
                        <i class="icon material-icons">photo_size_select_actual</i>
                        <span class="text">Banner</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a class="menu-link " href="/admin/orderList">
                        <i class="icon material-icons">shopping_cart</i>
                        <span class="text">Orders</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-wrap" id="mainWrap">
        <!-- Header -->
        <header class="main-header">
            <div class="col-search">
                <button class="btn-mobile" id="btnMobile">
                    <i class="material-icons">apps</i>
                </button>
            </div>
            <div class="col-nav">
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false">
                            <img class="img-xs rounded-circle" src="https://ui-avatars.com/api/?name=Admin&background=6e7e6e&color=fff" alt="User">
                        </a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item" href="/admin/profile">
                                <i class="material-icons" style="font-size: 18px; margin-right: 8px;">person</i>Profile
                            </a>
                            <a class="dropdown-item" href="/admin/settings">
                                <i class="material-icons" style="font-size: 18px; margin-right: 8px;">settings</i>Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="/admin/logout">
                                <i class="material-icons" style="font-size: 18px; margin-right: 8px;">exit_to_app</i>Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Sidebar Toggle for Desktop
        const btnMinimize = document.getElementById('btnMinimize');
        const sidebar = document.getElementById('offcanvas_aside');
        const mainWrap = document.getElementById('mainWrap');

        if (btnMinimize) {
            btnMinimize.addEventListener('click', function() {
                sidebar.classList.toggle('minimized');
                mainWrap.classList.toggle('expanded');
            });
        }

        // Mobile Menu Toggle
        const btnMobile = document.getElementById('btnMobile');
        const screenOverlay = document.getElementById('screenOverlay');

        if (btnMobile) {
            btnMobile.addEventListener('click', function() {
                sidebar.classList.add('show');
                screenOverlay.classList.add('show');
            });
        }

        if (screenOverlay) {
            screenOverlay.addEventListener('click', function() {
                sidebar.classList.remove('show');
                screenOverlay.classList.remove('show');
            });
        }

        // Close sidebar on menu item click (mobile)
        const menuLinks = document.querySelectorAll('.menu-link');
        menuLinks.forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth < 992) {
                    sidebar.classList.remove('show');
                    screenOverlay.classList.remove('show');
                }
            });
        });
    </script>
</body>
</html>